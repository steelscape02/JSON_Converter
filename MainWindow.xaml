<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="JsonConverter.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JsonConverter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="JsonConverter">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <RichEditBox 
            Grid.Row="0"
            Grid.Column="0"
            x:Name="jsonEntry"
            AutomationProperties.Name="JSON Content Entry"
            MinWidth="100" MinHeight="50"
            MaxWidth="400" MaxHeight="600"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Padding="10,10"
            Margin="10"
            Loaded="jsonEntry_Loaded"
            Unloaded="jsonEntry_Unloaded"
        />
        <Button 
            Grid.Row="1"
            Grid.Column="0"
            Padding="10,10"
            Margin="10"
            x:Name="myButton"
            Click="myButton_Click" 
            HorizontalAlignment="Center"
        >Submit</Button>

        <Border 
            Grid.Row="0"
            Grid.Column="1"
            MinWidth="100" MinHeight="50"
            MaxWidth="400" MaxHeight="600"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Padding="10,10"
            Margin="10"
            Background="{ThemeResource TextControlBackground}">
            <ScrollViewer>
                <TextBlock
                    x:Name="outputBox"
                    Text="Begin Conversion"
                    Foreground="{ThemeResource TextControlForeground}"
                />
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
