<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="JsonConverter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JsonConverter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid >

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <CommandBar 
           Grid.Row="1"
           Grid.Column="1"
           Background="Transparent"
           IsOpen="False" 
           DefaultLabelPosition="Right"
           HorizontalAlignment="Left"
           VerticalAlignment="Top">
            <AppBarButton Icon="Upload" Label="Upload" Click="Upload_json"/>
            <AppBarButton Icon="Delete" Label="Clear" Click="Clear_input"/>
            <AppBarButton Icon="Find" Label="Validate"/>
            <!-- Find a place to put this output (for this and submit errors)-->
            <AppBarButton Icon="Accept" Label="Submit" Click="Submit_Click"/>

        </CommandBar>
        <Grid
           Grid.Row="1"
           Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- Takes available space -->
                <ColumnDefinition Width="Auto" />
                <!-- Fits content -->
            </Grid.ColumnDefinitions>
            <CommandBar 
               Grid.Column="0"
               Background="Transparent"
               IsOpen="False" 
               DefaultLabelPosition="Right"
               HorizontalAlignment="Left"
               VerticalAlignment="Top">
                <AppBarButton Icon="Copy" Label="Copy" Click="Copy"/>
                <AppBarButton Icon="Save" Label="Save" Click="SaveJson"/>
            </CommandBar>

            <ComboBox 
               x:Name="LanguageSelect"
               Margin="10"
               Grid.Column="1"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               SelectionChanged="Language_Select" 
               PlaceholderText="Select Language" 
               Width="200"
               >
                <x:String>C#</x:String>
                <x:String>Python</x:String>
                <x:String>C++</x:String>
            </ComboBox>
        </Grid>
        <StackPanel 
           Orientation="Vertical"
           VerticalAlignment="Stretch"
           HorizontalAlignment="Stretch"
           Grid.Row="0"
           Grid.Column="0"
           MinHeight="5"
           >
            <Button
               Content="Settings"
               x:Name="settingsBtn"
               Margin="10"
               Click="Settings_Click"
               Style="{StaticResource AccentButtonStyle}"
               >

            </Button>
            <Canvas
               Margin="0 0 50 0">
                <TextBlock
               
               Text="JSON Converter"
               FontWeight="Bold"
               FontFamily="Roboto"
               RenderTransformOrigin="0,0"
               FontSize="45"
               Margin="50 20 5 0"
               >
                    <TextBlock.RenderTransform>
                        <RotateTransform Angle="90"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Canvas>
        </StackPanel>
        <RichEditBox 
           Grid.Row="0"
           Grid.Column="1"
           x:Name="jsonEntry"
           AutomationProperties.Name="JSON Content Entry"
           MinWidth="100" MinHeight="50"
           VerticalAlignment="Stretch"
           HorizontalAlignment="Stretch"
           Padding="10,10"
           Margin="10"
           Loaded="JsonEntry_Loaded"
           Unloaded="JsonEntry_Unloaded"
           IsSpellCheckEnabled="False"
           Style="{StaticResource DefaultRichEditBoxStyle}"
       />
        <Border
           Grid.Row="0"
           Grid.Column="2"
           MinWidth="80" MinHeight="50"
           VerticalAlignment="Stretch"
           HorizontalAlignment="Stretch"
           
           Margin="10"
           CornerRadius="4"
           Background="{ThemeResource TextControlBackground}">
            <ScrollViewer>
                <TextBox
                   x:Name="outputBox"
                   Text="Begin Conversion"
                   IsReadOnly="True"
                   AcceptsReturn="True"
                   Foreground="{ThemeResource AcrylicBackgroundFillColorBaseBrush}"
               />
            </ScrollViewer>
        </Border>


    </Grid>
</Page>
